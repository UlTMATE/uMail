<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
     PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Logout</servlet-class>
    </servlet>
	<servlet>
		<servlet-name>Signup</servlet-name>
		<servlet-class>Signup</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>ClientHome</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoadMails</servlet-name>
		<servlet-class>LoadMails</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SaveMail</servlet-name>
		<servlet-class>SaveMail</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteMails</servlet-name>
		<servlet-class>DeleteMails</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteMailsPermanently</servlet-name>
		<servlet-class>DeleteMailsPermanently</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RestoreMails</servlet-name>
		<servlet-class>RestoreMails</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SendMail</servlet-name>
		<servlet-class>SendMail</servlet-class>
	</servlet>
	
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Signup</servlet-name>
		<url-pattern>/Signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/Home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoadMails</servlet-name>
		<url-pattern>/LoadMails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SaveMail</servlet-name>
		<url-pattern>/SaveMail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteMails</servlet-name>
		<url-pattern>/DeleteMails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteMailsPermanently</servlet-name>
		<url-pattern>/DeleteMailsPermanently</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestoreMails</servlet-name>
		<url-pattern>/RestoreMails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SendMail</servlet-name>
		<url-pattern>/SendMail</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>
</web-app>
